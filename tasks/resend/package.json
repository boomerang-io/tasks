{
  "name": "boomerang-task-resend",
  "version": "1.0.0",
  "description": "Boomerang-task-resend",
  "repository": "git@github.com:boomerang-io/task-boomerang-task-resend.git",
  "author": "Boomerang Joe",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "dependencies": {
    "@boomerang-io/task-cli": "^1.0.0-alpha.31",
    "@boomerang-io/task-core": "^2.0.0-alpha.14",
    "resend": "^3.5.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=local boomerang-task-cli",
    "dev:debug": "cross-env NODE_ENV=local DEBUG=true boomerang-task-cli",
    "format": "prettier --write \"**/*.{js,json,md,yml}\"",
    "lint": "eslint **/*.js",
    "start": "boomerang-task-cli",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.8.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.{js,json,css,md}": [
      "prettier --print-width 120 --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "test"
        ]
      ]
    }
  },
  "eslintConfig": {
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "env": {
      "browser": true,
      "node": true,
      "commonjs": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "rules": {
      "no-process-exit": "off"
    },
    "ignorePatterns": [
      "node_modules"
    ]
  }
}
