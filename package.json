{
  "name": "@boomerang-io/boomerang-worker",
  "version": "0.0.0",
  "private": true,
  "repository": "git@github.com:boomerang-io/worker.interfaces.git",
  "author": "Tyson Lawrie <tyson@lawrie.com.au>",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=10",
    "yarn": "1"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "changed": "lerna changed",
    "release": "lerna publish",
    "lint": "eslint packages",
    "prettier": "prettier --write \"**/*.{js,json,md,yml}\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.0",
    "@commitlint/config-conventional": "^17.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^8.23.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.0",
    "jest": "^29.0.3",
    "lerna": "^5.5.2",
    "lerna-changelog": "^2.2.0",
    "lint-staged": "^13.0.2",
    "prettier": "^2.7.1"
  },
  "lint-staged": {
    "*.js": "eslint packages --fix",
    "*.{js,json,css,md}": [
      "prettier --print-width 120 --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "test"
        ]
      ]
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/**/*.{js}",
      "!**/node_modules/**"
    ],
    "roots": [
      "packages/"
    ]
  },
  "eslintConfig": {
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "env": {
      "browser": true,
      "node": true,
      "commonjs": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "rules": {
      "no-process-exit": "off"
    },
    "ignorePatterns": [
      "node_modules"
    ]
  }
}