{
  "name": "@boomerang-io/tasks",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:boomerang-io/tasks.git",
  "author": "Tyson Lawrie <twlawrie@us.ibm.com>",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "changed": "lerna changed",
    "release": "lerna publish",
    "version": "lerna version",
    "lint": "eslint packages",
    "prettier": "prettier --write \"**/*.{js,json,md,yml}\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "prepare": "husky",
    "pub:packages": "pnpm publish --access public --tag alpha --no-git-checks --filter '@boomerang-io/*'"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.0",
    "@commitlint/config-conventional": "^19.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.8.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lerna": "^8.1.7",
    "lerna-changelog": "^2.2.0",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.js": "eslint packages --fix",
    "*.{js,json,css,md}": [
      "prettier --print-width 120 --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "test"
        ]
      ]
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/**/*.{js}",
      "!**/node_modules/**"
    ],
    "roots": [
      "packages/"
    ]
  },
  "eslintConfig": {
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "env": {
      "browser": true,
      "node": true,
      "commonjs": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "rules": {
      "no-process-exit": "off"
    },
    "ignorePatterns": [
      "node_modules"
    ]
  }
}
