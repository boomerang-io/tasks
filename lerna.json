{
  "packages": [
    "packages/*"
  ],
  "npmClient": "pnpm",
  "version": "independent",
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/docs/**",
    "**/e2e/**",
    "**/examples/**",
    "**/*.md"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): release packages",
      "verifyAccess": false
    }
  }
}